<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Tiêu đề "Giải phương trình bậc 1" -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#357638"
        android:gravity="center"
        android:padding="10dp"
        android:text="Giải phương trình bậc 1"
        android:textColor="#FFEB3B"
        android:textSize="15sp"
        android:textStyle="bold" />

    <!-- Nhập a -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/textViewLabelA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập a:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/txta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Nhập giá trị a" />
    </LinearLayout>

    <!-- Nhập b -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:id="@+id/main">

        <TextView
            android:id="@+id/textViewLabelB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập b:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/txtb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="@string/nh_p_gi_tr_b" />
    </LinearLayout>

    <!-- Nút "Kết quả" -->
    <Button
        android:id="@+id/btnketqua"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/k_t_qu"
        android:backgroundTint="#B8B2B2"
        android:textColor="@android:color/black"
        app:cornerRadius="0dp" />

    <!-- TextView hiển thị kết quả (có thể thêm sau nếu cần) -->

</LinearLayout>